.wrapper
  = render 'shared/side_bar'
  .chat-main
    .main-header
      .main-header__left-box
        %h2
        .main-header__left-box__current-group
          =@group.name
        .main-header__left-box__member-list
          Member : #{@group.user_ids}
        %a{href: "/groups/edit"}
          .main-header__edit-btn Edit

    .messages
      = render @messages

    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'new_message__box', placeholder: '  type a message'
        .new_message__box__mask
          = f.label :image, class: 'imput__image' do
            = fa_icon 'picture-o', class: 'image-icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
